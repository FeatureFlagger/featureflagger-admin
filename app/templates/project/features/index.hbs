<section class="ffg-view">
    <header class="view-header">
      <h2 class="view-title"><span>{{model.name}} / Features</span></h2>
        <section class="view-actions">
            <button class="ffg-btn ffg-btn-green" {{action "toggleNewFeatureModal"}} ><span>New Feature</span></button>
        </section>
    </header>

    {{#if showNewFeatureModal}}
        {{ffg-fullscreen-modal "new-feature"
                              close=(action "toggleNewFeatureModal")
                              modifier="action wide"}}
    {{/if}}


    <section class="apps-grid-container">
        <div class="apps-grid" data-test-projects-list>

          {{#each model.features as |project|}}
          <div class="apps-grid-cell" data-test-project-item="{{project.id}}">
              {{#link-to 'dashboard' class="project-edit-button"}}
                <article class="apps-card-app">
                    <div class="apps-card-left">
                        <div class="apps-card-meta">
                            <h3 class="apps-card-app-title">{{project.name}}</h3>
                            <p class="apps-card-app-desc">{{project.description}}</p>
                        </div>
                    </div>
                    <div class="apps-card-right">
                        <i class="icon-arrow-right"></i>
                    </div>
                </article>
              {{/link-to}}
          </div>
          {{/each}}



        </div>

        </section>
</section>
