<section class="ffg-view">
    <header class="view-header">
      <h2 class="view-title"><span>{{model.name}} / Features</span></h2>
        <section class="view-actions">
            <button class="ffg-btn ffg-btn-green" {{action "toggleNewFeatureModal"}} ><span>New Feature</span></button>
        </section>
    </header>

    {{#if showNewFeatureModal}}
        {{ffg-fullscreen-modal "new-feature"
                              close=(action "toggleNewFeatureModal")
                              modifier="action wide"}}
    {{/if}}

    <section class="project-list-content">

      {{#each model.features as |feature|}}
      <div class="settings-project">
          {{#link-to 'dashboard' class="project-edit-button"}}
              <span class="project-title">{{feature.name}}</span>
              <span class="label label-default">email_marketing</span>
              <p class="project-description">{{feature.description}}</p>
          {{/link-to}}
      </div>
      {{/each}}

    </section>

</section>
