<section class="ffg-view">
    <header class="view-header">
      <h2 class="view-title">
        {{link-to model.name "projects"}}
        <i class="icon-arrow-right"></i> <span>Accounts</span>
      </h2>
    </header>

    <div class="view-container">

      <div class="project-list">
        <section class="project-list-content">

          {{#unless sortedAccounts}}
            {{ffg-loading-spinner}}
          {{/unless}}

          {{#each sortedAccounts as |account|}}
          <div class="settings-project">
              {{#link-to 'project.accounts.view' account.id class="project-edit-button"}}
                  <span class="project-title">{{account.name}}</span>
                  <span class="label label-default">{{account.identifier}}</span>
                  <p class="project-description">{{account.email}}</p>
              {{/link-to}}
          </div>
          {{/each}}

        </section>
      </div>

      <section class="settings-menu-container project-settings">
          {{outlet}}
      </section>

    </div>

</section>
